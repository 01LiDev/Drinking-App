<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vikingblue"
    tools:context=".QuestionSets">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#6B5298"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/Qs1"
            android:layout_width="146dp"
            android:layout_height="92dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Question set 1"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/e1"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="20dp"
            android:text="Edit"
            android:backgroundTint="@color/MediumPurple"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/r1"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="80dp"
            android:text="Rename"
            android:backgroundTint="@color/MediumPurple"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/s1"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="140dp"
            android:backgroundTint="@color/MediumPurple"
            android:text="Select"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        app:cardBackgroundColor="#6B5298"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/Qs2"
            android:layout_width="146dp"
            android:layout_height="92dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Question set 2"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/e2"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="@color/MediumPurple"
            android:text="Edit"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/r2"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="80dp"
            android:backgroundTint="@color/MediumPurple"
            android:text="Rename"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/s2"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="140dp"
            android:backgroundTint="@color/MediumPurple"
            android:text="Select"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        app:cardBackgroundColor="#6B5298"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/Qs3"
            android:layout_width="146dp"
            android:layout_height="92dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:lines="2"
            android:text="Question set 3"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/e3"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="20dp"
            android:text="Edit"
            android:backgroundTint="@color/MediumPurple"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/r3"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="80dp"
            android:text="Rename"
            android:backgroundTint="@color/MediumPurple"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/s3"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="140dp"
            android:text="Select"

            android:backgroundTint="@color/MediumPurple"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>

</ScrollView>
    
